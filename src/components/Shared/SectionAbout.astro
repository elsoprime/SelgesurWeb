---
import {mainContentData} from '@/data'
import {Picture} from 'astro:assets'
const {home, about} = mainContentData

// Procesar subtítulos como array si es necesario
const subtitleParts = Array.isArray(about.acf.subtitle)
  ? about.acf.subtitle
  : [about.acf.subtitle]
---

<!-- Línea decorativa superior -->
<section class='relative py-20 bg-gradient-to-br from-gray-50 to-gray-100'>
  <!-- Línea decorativa superior -->
  <div
    class='absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-orange-500 to-yellow-300'
  >
  </div>

  <div class='max-w-4xl mx-auto px-4'>
    <div class='text-center'>
      <h2
        class='relative text-4xl md:text-5xl lg:text-6xl font-bold text-sky-600 mb-8'
      >
        {home.title.rendered}
        <div
          class='absolute -bottom-3 left-1/2 -translate-x-1/2 w-1/2 h-1 bg-gradient-to-r from-orange-500 to-sky-500 rounded-full'
        >
        </div>
      </h2>
      <h3 class='text-2xl md:text-3xl text-gray-500 mb-6 font-medium'>
        {home.acf.subtitle}
      </h3>

      <p class='text-lg md:text-xl text-gray-500 mb-10 font-light'>
        {home.content.rendered}
      </p>

      <!-- Grupo de Botones -  -->
      <div class='flex flex-col sm:flex-row gap-4 justify-center'>
        <a
          href='/servicios/'
          class='inline-flex items-center justify-center px-8 py-4 bg-orange-500 text-white font-semibold rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-selgesur-orange/30 hover:-translate-y-1 group'
        >
          Nuestros Servicios
          <svg
            class='ml-2 w-5 h-5 transition-transform group-hover:translate-x-1'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M17 8l4 4m0 0l-4 4m4-4H3'></path>
          </svg>
        </a>

        <a
          href='/contacto/'
          class='inline-flex items-center justify-center px-8 py-4 border-1 border-gray-500 hover:border-0 hover:border-amber-600 font-semibold rounded-full transition-all duration-300 hover:bg-blue-400 hover:text-white hover:shadow-lg hover:shadow-gray-400 hover:-translate-y-1'
        >
          Contáctanos
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Línea decorativa inferior -->
<section class='py-20 bg-gradient-to-br from-gray-50 to-gray-300'>
  <div class='max-w-7xl mx-auto px-4'>
    <div class='grid grid-cols-1 lg:grid-cols-2 gap-16 items-center'>
      <!-- Contenido de texto -->
      <div class='space-y-8'>
        <!-- Etiqueta de empresa -->
        <div class='flex items-center space-x-2'>
          <div class='w-8 h-0.5 bg-orange-500'></div>
          <span
            class='text-orange-500 font-semibold text-sm tracking-wider uppercase'
          >
            Selgesur Limitada
          </span>
          <div class='w-8 h-0.5 bg-orange-500'></div>
        </div>

        <!-- Título principal -->
        <div class='space-y-4'>
          <h2
            class='text-4xl md:text-5xl lg:text-6xl font-black text-gray-800 leading-tight'
          >
            {about.title.rendered}
            <!-- Subtítulo dividido en dos líneas -->
            {
              subtitleParts.map((part, index) => (
                <span
                  class={`block ${index === 0 ? 'text-orange-600 lg:text-5xl' : 'text-sky-600 lg:text-5xl'}`}
                >
                  {part}
                </span>
              ))
            }
          </h2>

          <p class='text-lg text-gray-600 leading-relaxed max-w-2xl'>
            {about.content.rendered}
          </p>
        </div>

        <!-- Botón More Details -->
        <div>
          <a
            href='/nosotros/'
            class='flex items-center space-x-2 text-orange-500 font-semibold hover:text-orange-600 transition-colors group'
          >
            <svg
              class='w-5 h-5'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
            </svg>
            <span>MÁS DETALLES</span>
          </a>
        </div>

        <!-- Tarjetas informativas -->
        <div class='grid grid-cols-1 md:grid-cols-2 gap-6 mt-12'>
          {
            about.acf.blocks.map((block, index) => (
              <div class='bg-white p-6 rounded-xl shadow-lg transform transition-all duration-300 ease-in-out hover:shadow-xl hover:-translate-y-2 hover:scale-105 group cursor-pointer'>
                <div class='flex items-center space-x-4 mb-4'>
                  <div class='w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200 transition-colors'>
                    <block.icon class='w-6 h-6 text-orange-500' />
                  </div>
                  <div>
                    <h3 class='font-semibold text-gray-900'>{block.title}</h3>
                    <p class='text-gray-600 text-sm'>{block.subtitle}</p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Imagen lateral -->
      <div class='relative'>
        <div class='relative rounded-2xl overflow-hidden shadow-2xl'>
          <Picture
            src={about.featured_images.thumbnail.url}
            alt={`Logo ${about.title.rendered}`}
            class='w-full h-[600px] object-cover'
            width={about.featured_images.thumbnail.width}
            height={about.featured_images.thumbnail.height}
            formats={['avif', 'webp']}
          />

          <!-- Overlay decorativo -->
          <div
            class='absolute inset-0 bg-gradient-to-t from-blue-900/60 via-white/30 to-blue-600/40'
          >
          </div>

          <!-- Elementos decorativos -->
          <div
            class='absolute -top-4 -right-4 w-20 h-20 bg-orange-500 rounded-full opacity-20'
          >
          </div>
          <div
            class='absolute -bottom-4 -left-4 w-16 h-16 bg-blue-500 rounded-full opacity-30'
          >
          </div>
        </div>

        <!-- Patrón de fondo -->
        <div
          class='absolute -z-10 top-8 left-8 w-full h-full border-2 border-orange-200 rounded-2xl'
        >
        </div>
      </div>
    </div>
  </div>
</section>
