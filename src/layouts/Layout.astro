---
import {ClientRouter} from 'astro:transitions'
import '@/styles/global.css'
import Header from '@/components/UI/Header.astro'
import Footer from '@/components/UI/Footer.astro'

interface Props {
  title: string
  subtitle: string
  bgImage?: string
  useSlideshow?: boolean
  mainStyle?: string // Nueva prop para estilos personalizados
  isHome?: boolean // Prop para identificar la página de inicio
  animationType?: 'single' | 'multiline' | 'none' // Tipo de animación para el subtítulo
}

const {
  title,
  subtitle,
  bgImage,
  useSlideshow = false,
  mainStyle = '',
  isHome = false
} = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta
      name='description'
      content='Sitio web oficial de Selgesur, expertos en soluciones de gestión y servicios empresariales.'
    />
    <title>Sitio Web Oficial: {title}</title>
    <link rel='icon' type='image/png' href='/selgesur-icon.png' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Advent+Pro:wght@800&family=Outfit:wght@100..900&family=PT+Sans:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <ClientRouter />
  </head>
  <body class='bg-gray-50'>
    <Header subtitle={subtitle} bgImage={bgImage} useSlideshow={useSlideshow} />
    <slot name='before-main-content' />
    <main
      class={`
        ${
          isHome
            ? 'w-full pt-20 -mt-20'
            : 'bg-white p-20 max-w-7xl mx-auto lg:-mt-20 relative xl:shadow-lg xl:rounded-lg'
        }
        ${mainStyle}
      `}
    >
      {
        !isHome && (
          <h2 class='text-4xl pb-10 text-center font-black text-gray-600 uppercase'>
            {title}
          </h2>
        )
      }
      <slot />
    </main>
    <slot name='after-main-content' />
    <Footer />
  </body>
</html>
